{% extends 'base.html.twig' %}

{% block title %}Jouxy - Collections{% endblock %}

{% block body %}
    {% for gathering in gatherings %}
        <section class="section-nouveautes mb-5">
            <div class="container">
                <h1>{{ gathering.items(0) }}</h1>
                <h2 class="mt-3">{{ gathering.name }}</h2>
                <div class="row d-flex justify-content-center">
                    {% for item in items %}
                        <div class="col-3 mt-3">
                            <div class="card border-primary">
                                <h4 class="card-header">{{ item.name }}</h4>
                                {% if item.image %}
                                    <img src="{{ item.image }}" alt="image {{ item.name }}" width="100%" height="202px">
                                {% else %}
                                    <img src="{{ asset('img/Jouxy-logo.jpg') }}"
                                         alt="{{ item.name }}" width="100%" height="202px">
                                {% endif %}
                                <div class="card-body">
                                    <p class="card-text">{{ item.description }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endfor %}
{% endblock %}
